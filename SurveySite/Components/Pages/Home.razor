@page "/"
@page "/{SurveyId:int}"
@using ComponentLib.Components
@using Models

<PageTitle>Surveys</PageTitle>
<div class="page">


    @if (!showSurvey)
    {
        <div class="idea">

            <h1>Surveys</h1>
            <p>Click Here to Create your own Survey !</p>
            <button @onclick="Start" class="btn btn-primary">Click me to start !</button>
        </div>




    }
    else
    {
        @if (Edit)
        {
            @if (isOwner)
            {
                <div class="anwsers">
                    <button class="btn btn-outline-primary" @onclick="(() => pageCount--)"><i class="fa-solid fa-chevron-left"></i></button>
                    <div>  <p style="align-self:center">@pageCount / @totalPages</p></div>
                  
                    <button class="btn btn-outline-primary" @onclick="(() => pageCount++)"><i class="fa-solid fa-chevron-right"></i></button>
                </div>


                <ViewSurvey SurveyId="SurveyId" PageCount="pageCount" PageUpdate="PageCount" />
            }
            @if (pageCount == 0)
            {
                <CreateSurvey Survey="Survey" />
            }






        }
        else
        {


            <AnwserSurvey Survey="Survey" IsOwner="Owner" />
        }
    }

</div>




@using Microsoft.AspNetCore.Components.Forms

<div class="AnwserPage">
    <h2 class="SurveyName">@Survey.Name</h2>
    @if (Survey.Comps != null)
    {
        @if (Survey.Comps.Count != 0)
        {
            <EditForm Model="Module">


                @foreach (var item in Survey.Comps)
                {
                    <div class="question">
                        <h4 class="questionHeader">@item.Question</h4>
                        @if (item.Type == 0)
                        {
                            //Free Text
                            <textarea class="form-control"></textarea>

                        }
                        @if (item.Type == 1)
                        {
                            //multiple choice
                            if (item.MultiAnwsers != null)
                            {
                                if (item.MultiAnwsers.Count != 0)
                                {
                                    foreach (var x in item.MultiAnwsers)
                                    {
                                        <div class="option">
                                            <div class="col-auto">

                                                <div class="input-group mb-2">
                                                    <div class="input-group-prepend">
                                                        <div class="input-group-text"> <input class="form-check-input " type="radio" name="flexRadioDefault" id="flexRadioDefault1"></div>
                                                    </div>
                                                    <input placeholder="@x.Text" class="form-control" />

                                                </div>
                                            </div>
                                        </div>


                                    }
                                }
                            }
                        }
                        @if (item.Type == 2)
                        {
                            //Single Choice
                            if (item.SingleAnwser != null)
                            {
                                if (item.SingleAnwser.Count != 0)
                                {
                                    foreach (var x in item.SingleAnwser)
                                    {
                                        <div class="option">
                                            <div class="col-auto">

                                                <div class="input-group mb-2">
                                                    <div class="input-group-prepend">
                                                        <div class="input-group-text"> <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"></div>
                                                    </div>
                                                    <input placeholder="@x.Text" class="form-control" />

                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        }
                    </div>
                }
            </EditForm>
        }
    }
</div>